<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_bms_report_wizard_form" model="ir.ui.view">
        <field name="name">bms.report.wizard.form</field>
        <field name="model">bms.report.wizard</field>
        <field name="arch" type="xml">
            <form string="BMS Consolidated Report">
                <group>
                    <group>
                        <field name="partner_id"/>
                        <field name="user_id"/>
                        <field name="payment_status"/>
                    </group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                        <field name="shipping_status"/>
                    </group>
                </group>
                <group string="Excel File" invisible="not xlsx_file">
                    <field name="xlsx_filename" readonly="1"/>
                    <field name="xlsx_file" filename="xlsx_filename" readonly="1"/>
                </group>
                <footer>
                    <button name="action_print_pdf" string="Print PDF" type="object" class="btn-primary"/>
                    <button name="action_generate_xlsx" string="Generate Excel" type="object"/>
                    <button string="Close" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_bms_report_wizard" model="ir.actions.act_window">
        <field name="name">BMS Reports</field>
        <field name="res_model">bms.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
        id="menu_bms_report_wizard"
        name="BMS Reports"
        parent="sale.sale_menu_root"
        action="action_bms_report_wizard"
        sequence="70"
    />
</odoo>
