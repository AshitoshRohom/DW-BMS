<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_move_form_custom_ship_bill_address" model="ir.ui.view">
        <field name="name">account.move.form.custom.ship.bill.address</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <!-- Print Invoice Button -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="%(DW_BMS.action_report_invoice_custom)d"
                        type="action"
                        string="Print Invoice"
                        class="btn-secondary"
                        icon="fa-print"
                        invisible="move_type != 'out_invoice'"/>
            </xpath>

            <xpath expr="//field[@name='l10n_in_state_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <!-- Keep Payment Terms selectable on customer invoices (draft) -->
            <xpath expr="//group[@id='header_right_group']//field[@name='invoice_payment_term_id']" position="attributes">
                <attribute name="invisible">move_type not in ('out_invoice', 'out_refund')</attribute>
                <attribute name="readonly">state != 'draft'</attribute>
                <attribute name="placeholder">Payment Terms</attribute>
                <attribute name="options">{'no_quick_create': True}</attribute>
            </xpath>

            <xpath expr="//group[@id='header_right_group']" position="after">
                <group col="2" string="Bill To" invisible="move_type not in ('out_invoice', 'out_refund')">
                    <field name="bill_to_same_as_customer"/>
                    <field name="bill_to_address"
                           widget="text"
                           placeholder="Flat/Building, Street, Area"
                           readonly="bill_to_same_as_customer"/>
                    <field name="bill_to_city" placeholder="City" readonly="bill_to_same_as_customer"/>
                    <field name="bill_to_state_id" placeholder="State" readonly="bill_to_same_as_customer"/>
                    <field name="bill_to_zip" placeholder="PIN Code" readonly="bill_to_same_as_customer"/>
                </group>
                <group col="2" string="Ship To" invisible="move_type not in ('out_invoice', 'out_refund')">
                    <field name="ship_to_same_as_customer"/>
                    <field name="ship_to_address"
                           widget="text"
                           placeholder="Flat/Building, Street, Area"
                           readonly="ship_to_same_as_customer"/>
                    <field name="ship_to_city" placeholder="City" readonly="ship_to_same_as_customer"/>
                    <field name="ship_to_state_id" placeholder="State" readonly="ship_to_same_as_customer"/>
                    <field name="ship_to_zip" placeholder="PIN Code" readonly="ship_to_same_as_customer"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
