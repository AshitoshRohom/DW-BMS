<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ======================================
         FORM VIEW
    ======================================= -->
    <record id="view_dw_home_dashboard_form" model="ir.ui.view">
        <field name="name">dw.home.dashboard.form</field>
        <field name="model">dw.home.dashboard</field>
        <field name="arch" type="xml">
            <form string="DW BMS Home" create="false" edit="false">
                <sheet>

                    <group string="KPI Overview">
                        <group>
                            <field name="total_sale"/>
                            <field name="sale_due"/>
                        </group>
                        <group>
                            <field name="total_purchase"/>
                            <field name="purchase_due"/>
                        </group>
                    </group>

                    <group string="Operational Alerts">
                        <group>
                            <field name="low_stock_count"/>
                            <field name="pending_shipment_count"/>
                            <field name="pending_job_count"/>
                        </group>
                        <group>
                            <field name="overdue_invoice_count"/>
                            <field name="overdue_bill_count"/>
                        </group>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <!-- ======================================
         ACTION
    ======================================= -->
    <record id="action_dw_home_dashboard" model="ir.actions.act_window">
        <field name="name">BMS Home Dashboard</field>
        <field name="res_model">dw.home.dashboard</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
    </record>

    <!-- ======================================
         MENU INSIDE DEFAULT DASHBOARDS APP
    ======================================= -->
    <menuitem
        id="menu_dw_home_dashboard"
        name="BMS Home Dashboard"
        parent="spreadsheet_dashboard.spreadsheet_dashboard_menu_root"
        action="action_dw_home_dashboard"
        sequence="50"
    />

</odoo>
